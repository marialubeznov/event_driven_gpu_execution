#!/bin/bash

export LOCAL_GEM5_PATH=~/event_driven_gpu_execution/
export ZLIB_PATH=/home/tayler/zlib/

##### CUDA 3.1 used for gem5-gpu
CUDA_V=3.1

export PATH=/home/common/nvcuda/$CUDA_V/cuda/bin/:$PATH
export LD_LIBRARY_PATH=/home/common/nvcuda/$CUDA_V/cuda/lib64/:/home/common/nvcuda/$CUDA_V/cuda/lib/:$LD_LIBRARY_PATH

##### GPGPU-Sim
export CUDA_INSTALL_PATH=/home/common/nvcuda/$CUDA_V/cuda/
export NVIDIA_COMPUTE_SDK_LOCATION=/home/common/NVIDIA_GPU_Computing_SDK/$CUDA_V/
export PATH=$CUDA_INSTALL_PATH/bin:$PATH

##### Gem5-gpu
export CUDAHOME=/home/common/nvcuda/$CUDA_V/cuda/
export NVIDIA_CUDA_SDK_LOCATION=/home/common/NVIDIA_GPU_Computing_SDK/$CUDA_V/C/

cd benchmarks/edge;
ln -s ../common;
cd ${LOCAL_GEM5_PATH}
